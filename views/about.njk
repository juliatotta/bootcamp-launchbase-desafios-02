{% extends "layout.njk" %}

{% block head %}

    <title>Sobre</title>

{% endblock %}

{% block content %}

    <div id="about">
        <img src="{{ about.img_url }}" alt="logo {{ about.name }}">
        <h1>{{ about.name }}</h1>
        <h2>{{ about.content }}</h2>

        <ul>
            {% for item in about.list %}
            <li>{{ item.name }}</li>
            {% endfor %}
        </ul>

        <div id="footer" class="links">
            {% for link in about.links %}
            <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
            {% endfor %}
        </div>
    </div>

{% endblock %}
{% extends "layout.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}

    <section class="cards">
        {% for item in items %}
            <div class="card" id="{{ item.id }}">
                <img class="card-logo" src="layouts/assets/{{ item.id }}.png" alt="burger">
                <h2 class="card-title">{{ item.title }}</h2>
                <p class="card-text">{{ item.author }}</p>
            </div>
        {% endfor %}
    </section>

    <div class="modal-overlay">
        <div class="modal">
            <img class="card-modal" src="layouts/assets/{{ modal.id }}.png" alt="burger">
            <h2 class="modal-title">{{ modal.title }}</h2>
            <p class="modal-text">{{ modal.text }}</p>
            <p class="modal-close">Fechar modal</p>
        </div>
    </div>

{% endblock %}